script/source = "extends Control


# Called when the node enters the scene tree for the first time.
func _ready():
	if ScoreManager.cant_skip():
		$MarginContainer/DecisionButtons/SkipComponent.visible = false
	$MarginContainer2/QuestionInformation/ActionInformation.text = QuestionManager.current.action.name
	$MarginContainer/DecisionButtons/SkipComponent/LabelSkips.text = str(ScoreManager.skip)
	$MarginContainer2/QuestionInformation/QuestionLabel.text = QuestionManager.current.question
	$MarginContainer2/QuestionInformation/CostLabel.text = \"Custo: R$ \" + str(QuestionManager.current.cost)
	$MarginContainer2/QuestionInformation/CharacterComponent/LabelName.text = QuestionManager.current.character.id
	# Debug purposes
	print(\"Chosen question: \" + QuestionManager.current.id)


func _on_button_yes_pressed():
	GameManager.params = true
	ScoreManager.apply_cost(QuestionManager.current.cost)
	ScoreManager.apply_scores(QuestionManager.current.esg.esg, ESG.yes_group)
	QuestionManager.current.action.execute()
	TransitionScene.load_scene(\"res://scenes/pages/consequence_page.tscn\",\"shader1\")
	#get_tree().change_scene_to_file(\"res://scenes/pages/consequence_page.tscn\")


func _on_button_no_pressed():
	GameManager.params = false
	ScoreManager.apply_scores(QuestionManager.current.esg.esg, ESG.no_group)
	TransitionScene.load_scene(\"res://scenes/pages/consequence_page.tscn\",\"shader1\")
	#get_tree().change_scene_to_file(\"res://scenes/pages/consequence_page.tscn\")


func _on_button_skip_pressed():
	ScoreManager.decrement_skip()
	QuestionManager.rollback_question()
	GameManager.present_question()
	TransitionScene.load_scene(\"res://scenes/pages/question_page.tscn\",\"shader1\")
	#get_tree().change_scene_to_file(\"res://scenes/pages/question_page.tscn\")
"

